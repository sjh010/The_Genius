<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.sos.mapper.UserMapper">

	<update id="updateUserGrade" parameterType="org.sos.vo.UserVO">
		UPDATE tbl_user 
		SET	   user_grade = #{user_grade}
    	WHERE
    		
    		<foreach item="user" collection="list" open="(" close=")" separator=",">
        		user_id = #{user_id}
    		</foreach>
</update>
</mapper>
